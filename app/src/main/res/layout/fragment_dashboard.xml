<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:padding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/heading_layout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_heading_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello John"
                    android:textStyle="bold"
                    android:textColor="@color/red_500"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tv_subheading_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hope you have a good day today."
                    android:textColor="@color/neutrals_600"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/heading_layout_text"
                android:layout_alignBottom="@id/heading_layout_text"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:contentDescription="userProfile"
                android:src="@drawable/ic_user_36dp" />
        </RelativeLayout>

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:layout_marginTop="24dp"
            android:id="@+id/progress_daily"
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:arc_angle="220"
            app:arc_finished_color="@color/red_500"
            app:arc_progress="75"
            app:arc_stroke_width="16dp"
            app:arc_unfinished_color="@color/red_200"
            app:arc_text_color="@color/red_500"
            app:arc_text_size="96sp"
            app:arc_suffix_text_size="32sp"
            app:arc_suffix_text_padding="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_layout" />

        <TextView
            android:id="@+id/tv_daily_eaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eaten 00 of 00 Gl"
            android:textSize="24sp"
            android:textColor="@color/neutrals_600"
            android:layout_marginTop="-50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_daily" />

        <LinearLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_daily">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_shadow"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Medication"
                    android:textColor="@color/neutrals_600"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/red_500"
                    android:textSize="@dimen/heading_bold_Xl"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Taken"
                    android:textColor="@color/red_200"
                    android:textSize="@dimen/heading_medium_XS" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_shadow"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Last Glucose"
                    android:textColor="@color/neutrals_600" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="120"
                    android:textColor="@color/red_500"
                    android:textSize="@dimen/heading_bold_Xl"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="mg/dl"
                    android:textColor="@color/red_200"
                    android:textSize="@dimen/heading_medium_XS" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_chart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Weekly Glucose Level"
            android:textStyle="bold"
            android:textColor="@color/neutrals_500"
            android:textSize="@dimen/heading_medium_XS"
            app:layout_constraintTop_toBottomOf="@id/detail_layout"/>

        <com.github.mikephil.charting.charts.CandleStickChart
            android:id="@+id/candleStickChart"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/tv_chart_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
